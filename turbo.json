{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["ACM_TEREZA_APP", "ACM_TEREZA_TECH"],
  "pipeline": {
    "//#lint": {
      "dependsOn": [],
      "outputs": []
    },
    "//#syncpack:list": {
      "dependsOn": [],
      "outputs": []
    },
    "build": {
      "dependsOn": ["//#lint", "//#syncpack:list", "^build"],
      "outputs": ["build/**", "dist/**", ".next/**", "storybook-static/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "tests/**/*.ts",
        "tests/**/*.tsx"
      ]
    },
    "deploy": {
      "dependsOn": ["build", "test"],
      "outputs": [".carlin/**"]
    }
  }
}
